<p id="notice"><%= notice %></p>

<h1>Guildes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Max members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guildes.each do |guilde| %>
      <tr>
        <td><%= guilde.name %></td>
        <td><%= guilde.max_members %></td>
        <td><%= link_to 'Show', guilde %></td>
        <td><%= link_to 'Edit', edit_guilde_path(guilde) %></td>
        <td><%= link_to 'Destroy', guilde, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

